{
	"name": "template-app",
	"version": "0.0.0",
	"description": "Basic Hello World app for testing",
	"private": true,
	"main": "index.js",
	"workspaces": [
		"app/*",
		"app/src/*"
	],
	"type": "module",
	"scripts": {
		"build": "node app/src/util/build.js",
		"start": "npm run build && node app/src/server.js",
		"dev": "nodemon --watch app/src --ext js,scss,html,njk --exec \"npm run start\"",
		"test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules npx jest"
	},
	"license": "MIT",
	"dependencies": {
		"body-parser": "^1.20.2",
		"dotenv": "^16.3.1",
		"express": "^4.21.2",
		"express-validator": "^6.12.1",
		"govuk-frontend": "^5.10.1",
		"nunjucks": "^3.2.4",
		"pino": "^8.14.1",
		"pino-pretty": "^10.1.0"
    },
	"devDependencies": {
		"cross-env": "^7.0.3",
		"jest": "^29.7.0",
		"nodemon": "^3.1.10",
		"sass": "^1.89.0"
    }
}
